{
  "rules": {
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-last"
      }
    ],
    "typedef": [true, 
      "call-signature", 
      "parameter", 
      "member-variable-declaration",
      "property-declaration"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "use-default-type-parameter": true,
    "quotemark": [true, "single"],
    "member-ordering": [
      true,
      {
        "order": [
          "public-constructor",
          "private-instance-field",
          "public-instance-field",
          "public-instance-method",
          "protected-instance-method",
          "private-constructor",
          "public-static-field",
          "private-static-field",
          "private-instance-method"
        ]
      }
    ],
    "member-access": [true],
    "no-console": [true],
    "no-floating-promises": true,
    "await-promise": [true, "Bluebird", "RequestPromise"],
    "no-conditional-assignment": true,
    "no-unused-expression": true,
    "no-unused-variable": [true],
    "space-before-function-paren": [true, {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "class-name": true,
    "curly": true,
    "eofline": true,
    "forin": true,
    "indent": [
      true,
      "spaces"
    ],
    "label-position": true,
    "max-line-length": [
      true,
      140
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-eval": true,
    "no-string-literal": false,
    "no-use-before-declare": true,
    "no-trailing-whitespace": true,
    "no-any": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "radix": true,
    "prefer-readonly": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "variable-name": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-preblock"
    ]
  }
}